{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "$components/*": ["./components/*"],
      "$data/*": ["./data/*"],
      "$i18n/*": ["./i18n/*"],
      "$layouts/*": ["./layouts/*"],
      "$lib/*": ["./lib/*"],
      "$pages/*": ["./pages/*"],
      "$types/*": ["./types/*"]
    },
    "strictNullChecks": true
  }
}
